
@{
    ViewBag.Title = "Index";
}

<h2>Actions</h2>
@using (Html.BeginForm("HighestWatched", "Admin", FormMethod.Post))
{
    <div class="form-group">
        <label class="control-label" for="top">View Top Watched Bolgs</label>
        <input type="number" placeholder="select top value" name="top" class="form-control" min="1" required/>
    </div>
    <div class="form-group">
        <input type="submit" value="View Blogs" class="btn btn-default" />
    </div>
}
